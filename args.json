{
    "CPU": {
        "codec": {
            "x264":{
                "encoderopts": "-clv libx264",
                "encpreset": "slow",
                "qualityarg": "-crf",
                "quality": "15"
            },
            "x265":{
            "encoderopts": "-c:v libx265",
            "encpreset": "medium",
            "qualityarg": "-crf",
            "quality": "18"

            }
        
        }
    },

    "NVENC":{
        "hwaccelarg": "-hwaccel cuda -threads 8",
        "codec":{
            "h264":{
                "encoderopts": "-c:v h264_nvenc -rc constqp",
                "encpreset": "p7",
                "qualityarg": "-qp",
                "quality": "15"
            },
            "h265":{
                "encoderopts": "-c:v hevc_nvenc -rc constqp",
                "encpreset": "p7",
                "qualityarg": "-qp",
                "quality": "18"
            }
        }

    },
    "AMF":{
        "hwaccelarg": "-hwaccel d3d11va",
        "codec":{
            "h264":{
                "encoderopts": "-c:v h264_amf",
                "encpreset": "quality",
                "quality": "12",
                "amd": "yes"
            },
            "h265":{
                "encoderopts": "-c:v hevc_amf",
                "encpreset": "quality",
                "quality": "16",
                "amd": "yes"
            }
        }
    },
    "QuickSync":{
        "hwaccelarg": "-hwaccel d3d11va",
        "codec":{
            "h264":{
                "encoderopts": "-c:v h264_qsv",
                "encpreset": "veryslow",
                "qualityarg": "global_quality:v",
                "quality": "15"
            },
            "h265":{
                "encoderopts": "-c:v hevc_qsv",
                "encpreset": "veryslow",
                "qualityarg": "global_quality:v",
                "quality": "18"
            }
        }
    }
}